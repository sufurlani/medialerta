<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/clock_fragment"
        android:name="com.android.medialerta.presentation.clock.ClockFragment"
        android:layout_width="324dp"
        android:layout_height="126dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAlerts"
        android:layout_width="318dp"
        android:layout_height="122dp"
        android:text="@string/alertas"
        android:textSize="34sp"
        app:icon="@drawable/capsule_svgrepo_com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clock_fragment" />

    <Button
        android:id="@+id/btnSms"
        android:layout_width="318dp"
        android:layout_height="122dp"
        android:layout_marginTop="40dp"
        android:text="SMS"
        android:textSize="34sp"
        app:icon="@drawable/person_svgrepo_com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlerts" />

    <Button
        android:id="@+id/btnSos"
        android:layout_width="318dp"
        android:layout_height="122dp"
        android:layout_marginTop="40dp"
        android:text="@string/sos"
        android:textColor="@color/design_default_color_error"
        android:textSize="34sp"
        app:icon="@drawable/telephone_receiver_material_svgrepo_com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSms" />

</androidx.constraintlayout.widget.ConstraintLayout>